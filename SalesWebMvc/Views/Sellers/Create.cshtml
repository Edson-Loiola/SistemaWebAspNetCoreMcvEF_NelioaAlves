
@model SalesWebMvc.Models.Seller 
@*  com essa declaração minha viewm tem um objeto Seller a disposição  *@

@{
    ViewData["Title"] = "Create";
}

    <h2>@ViewData["Title"]</h2>

    <h4>Seller</h4>
    <hr />
    <div class="row"> @*  esse div row ocupa a largura da rela  *@
        <div class="col-md-4"> @* md-4 ocupa um 1/4 da tela *@
            <form asp-action="Create">

                @*  Esse Create é o metodo post para e*@
                <div class="form-group">

                    @*  o compilador consegue entender que o "Name" é um atributo do objeto Seller *@
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    @*  o compilador consegue entender que o "Email" é um atributo do objeto Seller *@
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" />

                </div>

                <div class="form-group">
                    <label asp-for="BaseSalary" class="control-label"></label>
                    <input asp-for="BaseSalary" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div> 
                
            </form>
        </div>
    </div>
